{
  "name": "shassi-nest",
  "version": "2.0.1",
  "description": "Shassi is a shopping assistant helping you to keep track of products you are interested and notifying you when price or availability change.",
  "author": "Kim Kern <shassi@kimkern.de>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "mongod": "mongod",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && tsc",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --forceExit",
    "updatestep": "cross-env NODE_ENV=development ts-node ./updatesteps/updatestep3.ts"
  },
  "dependencies": {
    "@nestjs/common": "^5.6.2",
    "@nestjs/core": "^5.6.2",
    "@nestjs/jwt": "^0.2.1",
    "@nestjs/passport": "^5.1.0",
    "@nestjs/swagger": "^2.5.1",
    "@nestjs/typeorm": "^5.2.2",
    "bcrypt": "^3.0.3",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cron": "^1.6.0",
    "dotenv": "^6.2.0",
    "joi": "^14.3.1",
    "jsdom": "^13.1.0",
    "mongodb": "^3.1.12",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.2.2",
    "telegraf": "^3.26.0",
    "typeorm": "^0.2.12",
    "typescript": "^3.2.4"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.6.2",
    "@types/bcrypt": "^3.0.0",
    "@types/cron": "^1.3.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.13",
    "@types/joi": "^14.0.1",
    "@types/jsdom": "^12.2.1",
    "@types/node": "^10.7.1",
    "@types/supertest": "^2.0.7",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.3.1",
    "jest": "^23.5.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.16.0",
    "supertest": "^3.4.1",
    "ts-jest": "^23.1.3",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.5.0",
    "tslint": "^5.12.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  }
}
