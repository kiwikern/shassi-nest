{
  "name": "shassi-nest",
  "version": "2.13.1",
  "description": "Shassi is a shopping assistant helping you to keep track of products you are interested and notifying you when price or availability change.",
  "author": "Kim Kern <shassi@kimkern.de>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "mongod": "mongod",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:webstorm-debug": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true node --inspect -r tsconfig-paths/register -r ts-node/register src/main.ts --noEmit",
    "prestart:prod": "npm run build",
    "start:prod": "cross-env NODE_ENV=production node dist/src/main.js",
    "webpack": "rimraf dist && webpack --config webpack.config.js",
    "post:webpack": "rimraf dist",
    "start:hmr": "cross-env NODE_ENV=development DB_KEEP_CONNECTION_ALIVE=true node dist/server",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json --runInBand",
    "updatestep": "cross-env NODE_ENV=development ts-node ./updatesteps/updatestep3.ts",
    "heroku-postbuild": "echo Skip builds on Heroku"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.5",
    "@nestjs/core": "^6.0.5",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "^6.0.5",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.0.0",
    "bcrypt": "^3.0.4",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cron": "^1.7.0",
    "cross-env": "^5.2.0",
    "dotenv": "^8.0.0",
    "joi": "^14.3.1",
    "jsdom": "^15.0.0",
    "mongodb": "^3.2.2",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.6.3",
    "rxjs": "^6.4.0",
    "swagger-ui-express": "^4.0.2",
    "telegraf": "^3.28.0",
    "typeorm": "^0.2.16",
    "typescript": "^3.4.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.5",
    "@types/bcrypt": "^3.0.0",
    "@types/cron": "^1.7.0",
    "@types/express": "^4.16.1",
    "@types/jest": "^24.0.11",
    "@types/joi": "^14.3.2",
    "@types/jsdom": "^12.2.3",
    "@types/node": "^11.13.8",
    "@types/supertest": "^2.0.7",
    "coveralls": "^3.0.3",
    "husky": "^2.1.0",
    "jest": "^24.7.1",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "supertest": "^4.0.2",
    "telegram-test-server": "github:kiwikern/telegram-test-server",
    "ts-jest": "^24.0.1",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "tslint": "^5.15.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "testResultsProcessor": "jest-sonar-reporter"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "engines": {
    "node": "8.x"
  },
  "heroku-run-build-script": true
}
